package com.javalec.base;

import java.util.Scanner;

public class MainClass2 {

	public static void main(String[] args) {
// Exercise : 사용자로부터 국어, 영어, 수학 점수를 입력 받아 평균 점수를 구하고, 각 과목의 입력 점수가 평균 이상인지 아닌지 판별하는 프로그램
		

		Scanner scanner2 = new Scanner(System.in);
		Scanner scanner3 = new Scanner(System.in);
		
		int score = scanner2.nextInt();	
		String subject = scanner3.nextLine();
		double average = score/3;
				
		
		System.out.println(subject + " 점수를 입력하세요!");
		System.out.println(score);		
		System.out.print("평균점수 : " + average );
		
		if (score > average) {
			System.out.println(subject + " 점수는 평균 보다 높습니다.");
		}else if (score = average) {
			System.out.println(subject + " 점수는 평균 점수 입니다.");
		}else {
			System.out.println(subject + " 점수는 평균 보다 낮습니다.");
		}
		

	}

}
